
<form action="/toy/add" method="post" class="form-horizontal">
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Name</label>
        <input type="text" id="" name="name" class="form-control" />
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Price</label>
        <input type="text" id="" name="price" class="form-control" />
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Category</label>
        <select name="category">
            {{#each categorys }}
            <option value="{{ _id }}"> {{ name }}</option>
            {{/each}}
        </select>

    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Image</label>
        <input type="url" id="" name="image" required class="form-control" />
    </div>
    <!-- Message input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example7">Description</label>
        <textarea class="form-control" id="" name="description" rows="4"></textarea>
    </div>

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4">Create new toy</button>
</form>


