
<form action="/toy/edit/{{ toy._id }}" method="post" class="form-horizontal">
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Name</label>
        <input type="text" id="" name="name" value="{{toy.name}}" class="form-control" />
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Price</label>
        <input type="text" id="" name="price" value="{{toy.price}}" class="form-control" />
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Category</label>
        <select name="category" required>
        {{#each categorys }}
        <option value="{{ this._id }}"> {{ this.name }}</option>
        {{/each}}
    </select>
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example3">Image</label>
        <input type="url" id="" name="image" required value="{{ toy.image }}" class="form-control" />
        <img src="{{ toy.image }}" alt="" width="100" height="100">
    </div>
    <!-- Message input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form6Example7">Description</label>
        <input type="text" id="" name="description" value="{{toy.description}}" class="form-control" />
    </div>
    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" value="Edit" class="btn btn-primary btn-block mb-4">Edit</button>
</form>

